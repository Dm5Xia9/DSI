          "path": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          },
          "policy": {
            "type": "string"
          }
        },
        "required": ["module", "path", "name", "icon"]
      }
    
  },
  "required": [
    "schemaVersion",
    "id",
    "version",
    "name",
    "description",
    "icon",
    "network",
    "depends",
    "entrypoints"
  ]
