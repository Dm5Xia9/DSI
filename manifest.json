{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "schemaVersion": {
      "type": "integer"
    },
    "id": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "icon": {
      "type": "string"
    },
    "network": {
      "type": "object",
      "properties": {
        "domain": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "swagger": {
          "type": "string"
        }
